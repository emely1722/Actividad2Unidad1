@{
    ViewBag.Title= "Convertir Divisas";
}

<h2>Conversor de Divisas</h2>

<form asp-action="ConvertirMoneda" asp-controller="Moneda" method="post">
    <label for="monto">Monto en DOP:</label>
    <input type="number" id="monto" name="monto" required min="1" step="0.01" />

    <label for="divisa">Convertir a:</label>
    <select id="divisa" name="divisa">
        <option value="USD">USD</option>
        <option value="EUR">EUR</option>
    </select>

    <button type="submit">Enter</button>
</form>
